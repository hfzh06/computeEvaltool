{
  "train_batch_size": 1024, 
  "train_micro_batch_size_per_gpu": 64,
  "gradient_accumulation_steps": 1,

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0001,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },

  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "warmup_min_lr": 1e-7,
      "warmup_max_lr": 0.0001,
      "warmup_num_steps": 500,
      "total_num_steps": 3000
    }
  },

  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 16
  },
  
  "zero_optimization": {
    "stage": 1, 
    # offload_optimizer 已移除，消除 CPU I/O 瓶颈
    "overlap_comm": true
  },

  "wall_clock_breakdown": false
}
